<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_shape"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/title_text_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Twoj koszyk....."
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="fonts/Avenir Next Condensed.ttc"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc_text_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:text="Wybierz coÅ› z menu"
        android:textAlignment="center"
        android:fontFamily="fonts/Avenir Next Condensed.ttc"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_divaider_listmenu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#3E80B4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clickable="true"
            android:fontFamily="fonts/Avenir Next Condensed.ttc"
            android:text="Ok"
            android:textAlignment="center"
            android:textColor="#3E80B4"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />


    </LinearLayout>

</LinearLayout>