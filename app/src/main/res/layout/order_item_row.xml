<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium

            android:id="@+id/order_item_quantity"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/price_shape"
            android:gravity="center"
            android:textAlignment="center" />

        <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
            android:id="@+id/order_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="60dp"
            android:textColor="@color/colorDarkGray"
            android:textSize="16sp" />

        <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
            android:id="@+id/order_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />

        <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:text="18.90"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>
