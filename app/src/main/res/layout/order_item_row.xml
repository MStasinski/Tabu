<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView

            android:id="@+id/order_item_quantity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/price_shape"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/order_item_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginLeft="60dp"
            android:textColor="@color/colorDarkGray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/order_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/order_list_rozmiar"
            fontPath="AvenirNext-DemiBold.ttf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:text="18.90"
            fontPath="AvenirNext-DemiBold.ttf"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>
