<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginBottom="10dp" />


            <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
                android:id="@+id/textContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Pizzeria 'Tabu'\nul. Jaskółcza 20, Gdynia\ntel 501 951 961"
                android:textAlignment="center"
                android:textColor="@color/colorDarkGray" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textContact">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/contact_margin_right"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/route_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/routeicon"
                        android:tint="@color/colorSecondGrey"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:elevation="5dp"
                        android:background="@drawable/circle_background_drawer_icon"
                        android:text="Button" />

                    <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="TRASA"
                        android:textColor="@color/colorDarkGray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/contact_margin_left"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/call_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone"
                        android:elevation="5dp"
                        android:tint="@color/colorSecondGrey"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/circle_background_drawer_icon"

                        android:text="Button" />

                    <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="ZADZWOŃ"
                        android:textColor="@color/colorDarkGray"

                        />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
