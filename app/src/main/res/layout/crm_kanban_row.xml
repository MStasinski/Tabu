<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_nr"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/orange_button_background"
            android:backgroundTint="@color/color_STARTERY"
            android:padding="10dp"
            android:text="NOWE"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/delivety_method"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/orange_button_background"
            android:backgroundTint="@color/color_STARTERY"
            android:padding="10dp"
            android:text="DOSTAWA"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_to_finish"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="30 min"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_item_desc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="17:00"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/div0"
        android:layout_gravity="center"
        android:layout_width="240dp"
        android:layout_height="3dp"
        android:padding="10dp"
        android:background="@drawable/custom_divaider_listmenu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/order_fb_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="GOTÓWKA"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/order_fb_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="10.00 zł"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_of_order_for_one_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


    </LinearLayout>

    <View
        android:id="@+id/div1"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@drawable/custom_divaider_listmenu" />

</LinearLayout>
