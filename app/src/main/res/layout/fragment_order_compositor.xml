<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.michal_stasinski.tabu.Utils.CustomTextView

        android:id="@+id/order_compozytor_positionInList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/colorSecondGrey"
        android:textSize="@dimen/menu_list_view_number" />

    <com.michal_stasinski.tabu.Utils.CustomTextView
        android:id="@+id/order_compozytor_titleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:text="Margeritha"
        android:textAlignment="center"
        android:textColor="@color/colorSecondGrey"
        android:textSize="@dimen/menu_list_view_title" />

    <com.michal_stasinski.tabu.Utils.CustomTextView
        android:id="@+id/order_compozytor_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Sos,Ser"
        android:textAlignment="center"
        android:textColor="@color/colorSecondGrey"
        android:textSize="@dimen/menu_list_view_desc" />

    <com.michal_stasinski.tabu.Utils.CustomTextView
        android:id="@+id/order_compozytor_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="19.90"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/menu_list_view_desc" />

    <com.michal_stasinski.tabu.Utils.BounceListView
        android:id="@+id/order_compozytor_listview"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:animationCache="false"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.05sp"
        android:scrollingCache="false" />



</LinearLayout>

