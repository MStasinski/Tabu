<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_light"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/crm_order_nr_zoom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5sp"
            android:layout_weight="1"
            android:background="@drawable/orange_button_background"
            android:padding="8dp"
            android:text="NO"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/crm_status_box_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="5"
            android:layout_marginTop="5sp"
            android:background="@drawable/orange_button_background"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"

                android:layout_weight="5"

                android:padding="3dp"
                android:text="Aktualny status"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/crm_status_zoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"


                android:padding="3dp"
                android:text="DOSTAWA"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zmień status na"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/country_arrays"
                android:gravity="left"
                android:prompt="@string/country_prompt" />

            <Button
                android:id="@+id/accept_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:text="Zatwierdź"

                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <TextView
            android:id="@+id/crm_delivety_method_zoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/orange_button_background"
            android:padding="3dp"
            android:text="DOSTAWA"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_to_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="30 min"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hour_of_deliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="17.00"
                android:textAlignment="textEnd"
                android:textColor="@color/colorDarkGray"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/div0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_divaider_listmenu"
            android:backgroundTint="@color/color_STARTERY"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/order_fb_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="4dp"
                android:text="GOTÓWKA"
                android:textAlignment="viewStart"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/order_fb_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="10.00 zł"
                android:textAlignment="textEnd"
                android:textColor="@color/colorDarkGray"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:text="adres"
            android:textAlignment="textStart"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>


    <View
        android:id="@+id/div1"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@drawable/custom_divaider_listmenu" />

</LinearLayout>
