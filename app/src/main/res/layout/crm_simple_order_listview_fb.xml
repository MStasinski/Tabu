<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/back_button" />

            <TextView
                android:id="@+id/title_shoping_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="ZAMÓWIENIA"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/toolBarTitle" />


        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="NOWE"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/toolBarTitle"
                        android:textStyle="bold" />

                    <com.michal_stasinski.tabu.Utils.BounceListView
                        android:id="@+id/simple_order_list_view0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"

                        android:animationCache="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.05sp"
                        android:paddingBottom="5dp"
                        android:scrollingCache="false" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/accepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="PRZYJĘTE"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/toolBarTitle"
                        android:textStyle="bold" />

                    <com.michal_stasinski.tabu.Utils.BounceListView
                        android:id="@+id/simple_order_list_view1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"

                        android:animationCache="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.05sp"
                        android:paddingBottom="5dp"
                        android:scrollingCache="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/realization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="W REALIZACJI"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/toolBarTitle"
                        android:textStyle="bold" />

                    <com.michal_stasinski.tabu.Utils.BounceListView
                        android:id="@+id/simple_order_list_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:animationCache="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.05sp"
                        android:paddingBottom="5dp"
                        android:scrollingCache="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/receive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="DO ODBIORU"
                        android:textAlignment="center"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/toolBarTitle"
                        android:textStyle="bold" />

                    <com.michal_stasinski.tabu.Utils.BounceListView
                        android:id="@+id/simple_order_list_view3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"

                        android:animationCache="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.05sp"
                        android:paddingBottom="5dp"
                        android:scrollingCache="false" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/transport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:gravity="center"
                        android:text="W DOSTAWIE"
                        android:textColor="@color/colorDarkGray"
                        android:textSize="@dimen/toolBarTitle"
                        android:textStyle="bold" />

                    <com.michal_stasinski.tabu.Utils.BounceListView
                        android:id="@+id/simple_order_list_view4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"

                        android:animationCache="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.05sp"
                        android:paddingBottom="5dp"
                        android:scrollingCache="false" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>

    <com.liuguangqiang.swipeback.SwipeBackLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.liuguangqiang.swipeback.SwipeBackLayout>

</LinearLayout>
