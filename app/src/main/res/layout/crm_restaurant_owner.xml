<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/back_button" />

            <TextView
                android:id="@+id/title_shoping_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="ZARZĄDZANIE RELACJAMI Z KLIENTAMI"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/toolBarTitle" />


        </RelativeLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:id="@+id/order_cycle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orange_button_background"
            android:elevation="2dp"
            android:translationZ="2dp">


            <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Condensed_DemiBold
                android:id="@+id/order_cycle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="OBIEG ZAMÓWIEŃ"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/orange_button_text_size" />
        </android.support.v7.widget.ButtonBarLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orange_button_background"
            android:elevation="2dp"
            android:translationZ="2dp">


            <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Condensed_DemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TEST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/orange_button_text_size" />
        </android.support.v7.widget.ButtonBarLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orange_button_background"
            android:elevation="2dp"
            android:translationZ="2dp">


            <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Condensed_DemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TEST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/orange_button_text_size" />
        </android.support.v7.widget.ButtonBarLayout>

        <android.support.v7.widget.ButtonBarLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/orange_button_background"
            android:elevation="2dp"
            android:translationZ="2dp">


            <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Condensed_DemiBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TEST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/orange_button_text_size" />
        </android.support.v7.widget.ButtonBarLayout>
    </LinearLayout>

    <com.liuguangqiang.swipeback.SwipeBackLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.liuguangqiang.swipeback.SwipeBackLayout>

</LinearLayout>
