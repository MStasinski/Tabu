<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/order_composer_titleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/activity_order_margin_top"

        android:gravity="center"

        android:text="Margeritha"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/activity_order_title" />

    <TextView
        android:id="@+id/order_composer_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="@dimen/activity_order_margin_top"
        android:gravity="center"
        android:text="Sos,Ser"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_composer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/activity_order_margin_top"

        android:text="19.90"
        android:textAlignment="center"
        android:textColor="@color/colorDarkGray"
        android:textSize="@dimen/activity_order_price"
        fontPath="AvenirNextCondensed-DemiBold.ttf"
        android:layout_margin="20dp"

        />
</LinearLayout>