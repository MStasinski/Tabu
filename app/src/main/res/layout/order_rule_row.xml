<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:paddingTop="5dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        >

        <TextView
            android:id="@+id/order_rule_title"
            fontPath="AvenirNext-DemiBold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textColor="@color/color_zmien"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_rule_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_rule_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:text="wwwwwwwwwwwwwwwww"
            android:textColor="@color/colorDarkGray"
            android:textSize="15sp" />

        <com.michal_stasinski.tabu.Utils.CustomFont_Avenir_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="ZMIEÅƒ"
            android:textColor="@color/color_zmien"
            android:textSize="12sp" />

        <View
            android:id="@+id/div_shop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_rule_desc"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_divaider_listmenu"
            android:backgroundTint="@color/colorSecond" />
    </RelativeLayout>


</LinearLayout>
